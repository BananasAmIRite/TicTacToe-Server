{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "module": "commonjs",
    "target": "ESNext",
    "outDir": "out",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitOverride": true
  },

  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
